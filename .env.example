# Familiar Configuration
# Copy this file to .env and customize for your deployment

# Infrastructure (required)
DATABASE_URL=postgresql+asyncpg://familiar:familiar@localhost:5432/familiar
REDIS_URL=redis://localhost:6379/0

# Music library path for Docker volume mounting
# The actual library path is configured via the admin UI (Settings > Library Management)
# This just tells Docker where to mount the volume
MUSIC_LIBRARY_PATH=/path/to/your/music

# OAuth callback URLs (required for Spotify/Last.fm integration)
# Change "localhost" to your server's hostname/IP for remote access
SPOTIFY_REDIRECT_URI=http://localhost:4400/api/v1/spotify/callback
FRONTEND_URL=http://localhost:4400

# API Keys (optional - can also be configured in Admin UI at /admin)
# ANTHROPIC_API_KEY=sk-ant-...
# SPOTIFY_CLIENT_ID=
# SPOTIFY_CLIENT_SECRET=
# LASTFM_API_KEY=
# LASTFM_API_SECRET=
